      <!-- This is a figure. It allows you to put a caption on an image -->
      <figure class="container">
        <!-- The <img><img> is the image file. In src="../images/" put the image name. In alt="" put a description. Between <figcaption><figcaption> put the image caption -->
        <img src="../images/IMAGENAME" alt="IMAGE DESCRIPTION">
        <hr />
        <figcaption>CAPTION HERE</figcaption>
      </figure>
